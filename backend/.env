# Server Configuration
PORT=5001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/miscellaneous_minds
# For production: mongodb+srv://username:password@cluster.mongodb.net/miscellaneous_minds

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_change_in_production_123
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/quicktime,audio/mpeg,audio/wav,audio/mp4

# Cloud Storage (Optional - for production)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Social Media API Keys (Optional - for link previews)
FACEBOOK_APP_ID=your_fb_app_id
YOUTUBE_API_KEY=your_youtube_api_key
REDDIT_CLIENT_ID=your_reddit_client_id

# Email Service (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password